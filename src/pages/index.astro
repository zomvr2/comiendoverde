<script>
	const nav = document.querySelector("header");
	const buffer = 15; // Adjust this value as needed

	window.addEventListener("scroll", () => {
		if (window.scrollY >= window.innerHeight + buffer) {
			nav.classList.add("header_scrolled");
		} else if (window.scrollY <= window.innerHeight - buffer) {
			nav.classList.remove("header_scrolled");
		}
	});

	const sections = document.querySelectorAll("section");

	const observer = new IntersectionObserver(
		(entries, observer) => {
			entries.forEach((entry) => {
				if (entry.isIntersecting) {
					history.pushState(null, null, `#${entry.target.id}`);
				}
			});
		},
		{ threshold: 0.7 },
	);

	sections.forEach((section) => {
		observer.observe(section);
	});
</script>
